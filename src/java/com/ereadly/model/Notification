package com.ereadly.model;

import java.util.Date;

public class Notification {

    private String messageId;
    private String content;
    private Member recipient;
    private Date sentDate;

    public Notification() {
    }

    public Notification(String content, Member recipient) {
        this.content = content;
        this.recipient = recipient;
        this.sentDate = new Date();
    }

    public String getMessageId() {
        return messageId;
    }

    public void setMessageId(String messageId) {
        this.messageId = messageId;
    }

    public String getContent() {
        return content;
    }

    public void setContent(String content) {
        this.content = content;
    }

    public Member getRecipient() {
        return recipient;
    }

    public void setRecipient(Member recipient) {
        this.recipient = recipient;
    }

    public Date getSentDate() {
        return sentDate;
    }

    public void send() {
        // simulasi pengiriman notifikasi
        System.out.println("Notifikasi untuk " + recipient.getName());
        System.out.println("Pesan: " + content);
        System.out.println("Tanggal: " + sentDate);
    }
}
